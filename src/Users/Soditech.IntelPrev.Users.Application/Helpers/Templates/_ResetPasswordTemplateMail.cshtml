@model Soditech.IntelPrev.Users.Application.Helpers.Models.ResetPasswordTemplateMailModel


<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Réinitialisation de Mot de Passe</title>
    <style>
        body { font-family: Arial, sans-serif; line-height: 1.6; }
        .container { max-width: 600px; margin: 0 auto; padding: 20px; }
        h1 { color: #333; }
        p { margin: 10px 0; }
        .footer { margin-top: 20px; font-size: 0.9em; color: #666; }
    </style>
</head>
<body>
<div class="container">
    <h1>Votre Mot de Passe a été Réinitialisé</h1>
    <p>Bonjour @Model?.FullName,</p>
    <p>Nous vous informons que votre mot de passe a été réinitialisé avec succès.</p>
    <p>Voici votre nouveau mot de passe :</p>
    <p><strong>@Model?.Password</strong></p>
    <p>Pour vous connecter, cliquez sur le lien ci-dessous :</p>
    <p><a href="@Model?.Url">Se connecter</a></p>
    <p>merci d'informer les admins, si vous n'avez pas demandé ce changement.</p>
    <div class="footer">
        <p>Merci de faire confiance à notre service.</p>
        <p>L'équipe de @Model?.ApplicationName</p>
    </div>
</div>
</body>
</html>

