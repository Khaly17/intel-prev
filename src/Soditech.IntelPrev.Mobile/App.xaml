<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Soditech.IntelPrev.Mobile.Converters"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Soditech.IntelPrev.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <toolkit:IsStringNotNullOrEmptyConverter x:Key="IsStringNotNullOrEmptyConverter" />
            <toolkit:IsStringNullOrEmptyConverter x:Key="IsStringNullOrEmptyConverter" />
            <toolkit:IsStringNotNullOrWhiteSpaceConverter x:Key="IsStringNotNullOrWhiteSpaceConverter" />
            <toolkit:ListToStringConverter x:Key="ListToStringConverter" Separator="," />

            <converters:IsCreateRegisterFieldCommandConverter x:Key="IsCreateRegisterFieldCommandConverter" />
            <converters:IsCreateReportFieldGroupCommandConverter x:Key="IsCreateReportFieldGroupCommandConverter" />
            <converters:IsFieldTypeTextConverter x:Key="IsFieldTypeTextConverter" />
            <converters:IsFieldTypeDateConverter x:Key="IsFieldTypeDateConverter" />
            <converters:IsFieldTypeBooleanConverter x:Key="IsFieldTypeBooleanConverter" />
            <converters:IsFieldTypeNumberConverter x:Key="IsFieldTypeNumberConverter" />
            <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
            <converters:BoolToIntConverter x:Key="BoolToIntConverter" />
            <converters:RequiredFieldBorderColorConverter x:Key="RequiredFieldBorderColorConverter" />
            <converters:BoolToSelectionModeConverter x:Key="BoolToSelectionModeConverter" />


        </ResourceDictionary>
    </Application.Resources>
</Application>
