<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: Pour Android, voir aussi Platforms\Android\Resources\values\colors.xml -->

    <!-- Couleurs du logo IntelPrev -->
    <Color x:Key="FireRed">#D62828</Color>         <!-- Bande gauche du logo -->
    <Color x:Key="DeepSkyBlue">#003F88</Color>     <!-- Contour hexagonal "P" -->
    <Color x:Key="PureWhite">#FFFFFF</Color>       <!-- Arrière-plan général -->
    <Color x:Key="CharcoalGray">#2F2F2F</Color>    <!-- Texte "IntelPrev" -->
    <Color x:Key="LightGray">#E8E8E8</Color>       <!-- Ombres/bordures -->

    <!-- Couleurs sémantiques pour l'interface utilisateur -->
    <Color x:Key="Primary">#003F88</Color>              <!-- Couleur principale (DeepSkyBlue) -->
    <Color x:Key="PrimaryDark">#002A5B</Color>          <!-- Version plus foncée de DeepSkyBlue -->
    <Color x:Key="Secondary">#D62828</Color>            <!-- Couleur secondaire (FireRed) -->
    <Color x:Key="Tertiary">#007BFF</Color>             <!-- Bleu accent pour les liens et elements interactifs -->
    <Color x:Key="Background">#FFFFFF</Color>           <!-- Arrière-plan (PureWhite) -->
    <Color x:Key="TextPrimary">#2F2F2F</Color>          <!-- Texte principal (CharcoalGray) -->
    <Color x:Key="TextSecondary">#747474</Color>        <!-- Texte secondaire (gris moyen) -->
    <Color x:Key="Border">#E8E8E8</Color>               <!-- Bordures (LightGray) -->
    <Color x:Key="Success">#28A745</Color>              <!-- Messages de succès (vert) -->
    <Color x:Key="Warning">#FFC107</Color>              <!-- Avertissements (jaune) -->
    <Color x:Key="Danger">#D62828</Color>               <!-- Erreurs et dangers (FireRed) -->
    <Color x:Key="Info">#17A2B8</Color>                 <!-- Informations (bleu-vert) -->

    <!-- Couleurs standards -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    
    <!-- Nuances de gris -->
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- Pinceaux (Brushes) -->
    <SolidColorBrush x:Key="FireRedBrush" Color="{StaticResource FireRed}"/>
    <SolidColorBrush x:Key="DeepSkyBlueBrush" Color="{StaticResource DeepSkyBlue}"/>
    <SolidColorBrush x:Key="PureWhiteBrush" Color="{StaticResource PureWhite}"/>
    <SolidColorBrush x:Key="CharcoalGrayBrush" Color="{StaticResource CharcoalGray}"/>
    <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGray}"/>
    
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDark}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource Border}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Danger}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource Info}"/>
    
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
    
    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
</ResourceDictionary>