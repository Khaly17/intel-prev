@page "/reports/detail/{Id}"
@attribute [Authorize(Roles = "Admin, Super Admin")]

@using Microsoft.AspNetCore.Authorization

@using Soditech.IntelPrev.Reports.Shared.Reports
@using Soditech.IntelPrev.Users.Shared.Users
@using Soditech.IntelPrev.Web.Components.Widgets.Alerts
@using Soditech.IntelPrev.Web.Components.Widgets.Dialogs


@if (SelectedReport is null)
{
    <p>Chargement des détails du signalement...</p>
}
else
{

    <div class="report-details-container">
        <div class="report-header">
            <h2 class="report-title">@SelectedReport.Title</h2>
        </div>

        <div class="report-info">
            <p><strong>Créé par :</strong> @SelectedReport.CreatorFullName</p>
            <p><strong>Date de création :</strong> @SelectedReport.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</p>
            <p><strong>Statut :</strong> @SelectedReport.Status</p>
            <p><strong>Description :</strong> @SelectedReport.Description</p>
        </div>

        <div class="report-actions">
            <button class="btn-delete" @onclick="() => GoBack()">Retour</button>
        </div>
    </div>

}

<style>
    .report-details-container {
        max-width: 800px;
        margin: auto;
        padding: 20px;
        background: white;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }
    .report-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 2px solid #ddd;
        padding-bottom: 10px;
    }
    .report-title {
        font-size: 20px;
        font-weight: bold;
    }
    .report-status {
        padding: 5px 10px;
        border-radius: 5px;
        font-weight: bold;
    }
    .report-info, .report-data {
        margin-top: 15px;
    }
    .report-actions {
        margin-top: 28px;
        display: flex;
        justify-content: space-between;
    }
    .btn-delete {
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }
    .btn-delete {
        background-color: #dc3545;
        color: white;
    }
</style>