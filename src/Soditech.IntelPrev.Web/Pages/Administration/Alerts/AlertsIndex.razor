@page "/alert-details"

@attribute [Authorize(Roles = "Admin, Super Admin")]

@using Microsoft.AspNetCore.Authorization
@using Soditech.IntelPrev.Reports.Shared.Alerts
@using Soditech.IntelPrev.Users.Shared.Users
@using Soditech.IntelPrev.Web.Components.Widgets.Tables
@using Soditech.IntelPrev.Web.Components.Widgets.Alerts
@using Soditech.IntelPrev.Web.Components.Widgets.Dialogs

<GenericGrid TItem="@AlertResult"
             Items="@AlertList"
             GridTitle="Alertes"
             ToolbarItems="@ToolbarItems"
             DisplayTitle="true"
             PageCount="@PageCount"
             PageSize="@PageSize"
             DetailAction="GoToDetails"
             Columns="@Columns"
             DisplaySpinnerOnLoading="IsLoading">

    <AlertComponent Message="@_alertMessage" AlertType="@_alertType" IsVisible="@_isAlertVisible" />

</GenericGrid>

<GenericConfirmDialog HeaderLabel="Suppression de l'alerte" IsVisible="@_isDeleteModalVisible"
                      OnConfirm="DeleteAlertAsync" OnCancel="HideDeleteModal" />