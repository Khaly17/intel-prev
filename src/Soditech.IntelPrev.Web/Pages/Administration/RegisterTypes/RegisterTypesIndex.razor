@page "/registers/add"
@attribute [Authorize(Roles = "Admin, Super Admin")]

@using Microsoft.AspNetCore.Authorization
@using Soditech.IntelPrev.Web.Components.Administrations.Registers

@if (!_isCreating){    
    <CreateRegisterComponent 
        OnIsCreatingChanged="HandleIsCreatingChanged"
        RegisterTypeResult="@RegisterTypeResult"
        />
}
else
{
    <RegisterPreviewComponent 
        OnIsCreatingChanged="HandleIsCreatingChanged"
        RegisterType="@RegisterTypeResult"
        OnSaveChanged="CreateRegister"
        saveBtnLabel="@saveBtnLabel"/>
}