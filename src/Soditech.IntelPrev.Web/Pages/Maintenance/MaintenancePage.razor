@page "/maintenance"
@using Microsoft.AspNetCore.Components

<div class="maintenance-container">
    <div class="maintenance-content">
        <h1>Page en Maintenance</h1>
        <p>Cette page est actuellement en cours de développement. Revenez bientôt pour plus de mises à jour.</p>
        <p>Merci de votre compréhension.</p>
        <button class="btn btn-primary" @onclick="GoBack">Retour à l'accueil</button>
    </div>
</div>

<style>
    .maintenance-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f8f9fa;
    }

    .maintenance-content {
        text-align: center;
        background: white;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    p {
        font-size: 1.2rem;
        margin-bottom: 20px;
    }

    .btn {
        margin-top: 20px;
    }
</style>

@code {
    private void GoBack()
    {
        NavigationManager.NavigateTo("/maintenance");
    }

    [Inject]
    private NavigationManager NavigationManager { get; set; }
}