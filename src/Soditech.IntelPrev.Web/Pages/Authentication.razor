@page "/authentication/login"

<EditForm Model="_loginModel" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="tenant">Tenant</label>
        <InputText id="tenant" class="form-control" @bind-Value="_loginModel.Tenant" />
    </div>

    <div class="form-group">
        <label for="username">Username</label>
        <InputText id="username" class="form-control" @bind-Value="_loginModel.Username" />
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <InputText id="password" type="password" class="form-control" @bind-Value="_loginModel.Password" />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</EditForm>

@code {
    private LoginModel _loginModel = new();

    private async Task HandleValidSubmit()
    {
        // Handle the login logic here
    }

    public class LoginModel
    {
        public string Tenant { get; set; }
        public string Username { get; set; }
        public string Password { get; set; }
    }
}