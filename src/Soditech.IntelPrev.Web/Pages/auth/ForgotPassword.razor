@page "/auth/forgot-password"
@layout LoginLayout

<section class="login">
    <img src="assets/images/soditech-logo.png" alt="Intel'Prev Logo" class="logo" />
    <h2>Réinitialisation du mot de passe</h2>
    <p>Entrez votre nom d'utilisateur pour recevoir un email de réinitialisation</p>
    <form class="login-form" novalidate @onsubmit="HandleForgotPassword">
        <div class="form-group">
            <label for="username">Nom d'utilisateur</label>
            <input 
                type="text"
                id="username"
                placeholder="Entrez votre nom d'utilisateur"
                required
                aria-label="username"
                @bind="Username"
                @oninput="ValidateUsername">
        </div>
        <div class="form-group">
            <button class="btn submit-btn" disabled="@IsSendingReset">
                @if (IsSendingReset)
                {
                    <span>Envoi en cours...</span>
                }
                else
                {
                    <span>Envoyer</span>
                }
            </button>
        </div>
        @if (!string.IsNullOrEmpty(ForgotPasswordMessage))
        {
            <small class="message @(ForgotPasswordMessage.Contains("erreur") ? "error-message" : "success-message")">
                @ForgotPasswordMessage
            </small>
        }
    </form>
    <p><a class="return-link" href="/login">Retour à la connexion</a></p>
</section>

<style>
    .login {
    background-color: #ffffff;
    padding: 60px 20px;
    text-align: center;
    color: #1a1a2e;
}

.login .logo {
    width: 50px;
    margin-bottom: 20px;
}

.login h2 {
    font-size: 1.5em;
    margin-bottom: 20px;
    color: #1d185e;
}

.login p {
    font-size: 1.1em;
    margin-bottom: 40px;
    color: #555;
}

.login-form {
    max-width: 400px;
    margin: 0 auto;
    background-color: #ffffff;
    padding: 30px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.form-group {
    margin-bottom: 20px;
    text-align: left;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: #333;
}

.form-group input {
    width: 100%;
    padding: 10px;
    font-size: 1em;
    border-radius: 5px;
    border: 1px solid #ddd;
    box-sizing: border-box;
    transition: border-color 0.3s ease;
}

.form-group input:focus {
    border-color: #003f88;;
    outline: none;
}

.submit-btn {
    padding: 12px 20px;
    background-color: #003f88;;
    color: #ffffff;
    border: none;
    border-radius: 5px;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s ease;
    width: 100%;
}

.submit-btn:hover:not([disabled]) {
    background-color: #003f88;;
}

.submit-btn[disabled] {
    background-color: #ccc;
    cursor: not-allowed;
}

.message {
    display: block;
    margin-top: 15px;
    text-align: center;
}

.success-message {
    color: #28a745;
}

.error-message {
    color: #dc3545;
}

.return-link {
    color: #1d185e;
    text-decoration: none;
    margin-top: 20px;
    display: inline-block;
}

.return-link:hover {
    text-decoration: underline;
}

@@media (max-width: 768px) {
    .login-form {
        padding: 20px;
    }
}
</style>