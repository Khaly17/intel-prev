@attribute [Authorize(Roles = "Admin, Super Admin")]
@using Microsoft.AspNetCore.Authorization

<div class="row" style="margin-left: 0; margin-right: 0;">
    <div class="col-md-12 mt-0" style="padding: 0;">
        <div class="row">
            <div class="col-md-12  mx-auto">
                <div class="card total-visits-browse-area">
                    <div class="card-header" style="margin: 0; padding: 10px;">
                        <h5 style="margin: 0;">@Title</h5>
                    </div>

                    <EditForm Model="@NewCampaign" OnValidSubmit="CreateCampaignAsync">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        @if (!string.IsNullOrEmpty(SuccessMessage))
                        {
                            <div class="alert alert-success" role="alert">
                                @SuccessMessage
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(ErrorMessage))
                        {
                            <div class="alert alert-danger" role="alert">
                                @ErrorMessage
                            </div>
                        }

                        <div class="form-group row mb-8 mt-4" style="margin-left: 15px;">
                            <label class="control-label col-md-2 mb-1">Nom de la campagne</label>
                            <div class="col-md-10" style="border-radius: 0;">
                                <InputText class="form-control " style="height: 40px; border-radius: 0;"
                                           @bind-Value="NewCampaign.Name" />
                                <ValidationMessage For="@(() => NewCampaign.Name)" />
                            </div>
                        </div>

                        <div class="form-group row mb-8 mt-4" style="margin-left: 15px;">
                            <label class="control-label col-md-2 mb-1">Description</label>
                            <div class="col-md-10" style="border-radius: 0;">
                                <InputText class="form-control " style="height: 40px; border-radius: 0;"
                                           @bind-Value="NewCampaign.Description" />
                                <ValidationMessage For="@(() => NewCampaign.Description)" />
                            </div>
                        </div>

                        <div class="form-group row mb-8 mt-4" style="margin-left: 15px;">
                            <label class="control-label col-md-2 mb-1">Date de début</label>
                            <div class="col-md-10" style="border-radius: 0;">
                                <InputDate class="form-control " style="height: 40px; border-radius: 0;"
                                           @bind-Value="NewCampaign.StartDate" />
                                <ValidationMessage For="@(() => NewCampaign.StartDate)" />
                            </div>
                        </div>

                        <div class="form-group row mb-8 mt-4" style="margin-left: 15px;">
                            <label class="control-label col-md-2 mb-1">Date de fin</label>
                            <div class="col-md-10" style="border-radius: 0;">
                                <InputDate class="form-control " style="height: 40px; border-radius: 0;"
                                           @bind-Value="NewCampaign.EndDate" />
                                <ValidationMessage For="@(() => NewCampaign.EndDate)" />
                            </div>
                        </div>

                        <div class="d-flex justify-content-end" style="margin-top: 20px; padding-right: 15px;">
                            <div class="d-flex gap-2">
                                <a href="/campaigns" class="btn btn-primary"
                                   style=" background-color: rgb(196, 53, 40);">
                                    Retour
                                </a>

                                <button type="submit" class="btn btn-primary"
                                        style=" background-color: #003f88; border-color: #003f88; ">
                                    Sauvegarder
                                </button>
                            </div>
                        </div>

                    </EditForm>
                </div>
            </div>

        </div>
    </div>
</div>
<style>
    .custom-input {
        border: 0.5px solid rgba(0, 0, 0, 0.3);
        border-radius: 1px;
    }

    .total-visits-browse-area {
        background: white;
        margin-top: 10px;
        padding: 20px;
        border-top: 7px solid rgb(196, 53, 40);
        box-shadow: 0 5px 5px rgba(0, 0, 0, 0.10);
    }
</style>
