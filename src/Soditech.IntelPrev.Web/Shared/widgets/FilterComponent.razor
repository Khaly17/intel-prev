@using Syncfusion.Blazor.Calendars

<div class="filter-container">
    <div class="filters-left">
        <button @onclick="SetCurrentWeek" class="filter-button">SEMAINE EN COURS</button>
        <button @onclick="SetCurrentMonth" class="filter-button">MOIS EN COURS</button>
        <div class="date-picker d-flex align-items-center">
            <span class="date-label">Du</span>
            <SfDatePicker TValue="DateTime"
                          Placeholder="01/01/2020"
                          Format="dd/MM/yyyy"
                          Value="StartDate"
                          ValueChanged="OnStartDateChanged"
                          @onkeydown="HandleKeyDown"
                          CssClass="datepicker" />
            <span class="date-label">au</span>
            <SfDatePicker TValue="DateTime"
                          Placeholder="05/09/2024"
                          Format="dd/MM/yyyy"
                          ValueChanged="OnEndDateChanged"
                          Value="EndDate"
                          CssClass="datepicker"
                          @onkeydown="HandleKeyDown" />
            <button class="ok-button" @onclick="LoadCharts">OK</button>
        </div>
    </div>

    <div class="filters-right">
        <button class="icon-button" @onclick="Notify"><i class="fa fa-envelope"></i></button>
        <button class="icon-button" @onclick="Print"><i class="fa fa-print"></i></button>
        <button class="icon-button" @onclick="Download"><i class="fa fa-download"></i></button>
    </div>
</div>

<style>
    .filter-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-left: 20px;
        margin-right: 20px;
        border-radius: 5px;
    }

    .filters-left {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .filter-button {
        background-color: #fff;
        color: #003f88;
        border: none;
        padding: 4px 12px;
        border-radius: 5px;
        font-size:14px;
        cursor: pointer;
        transition: background-color 0.3s, box-shadow 0.3s;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); 
    }
    .filter-button:hover {
        background-color: #f1f1f1;
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
    }
    .date-picker {
        display: flex;
        align-items: center;
        gap: 10px;
        width: 24rem;
    }

    .date-label {
        font-weight: bold;
        margin-right: 5px;
    }

    .ok-button {
        background-color: #003f88;
        color: white;
        border: none;
        padding: 4px 12px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .ok-button:hover {
        background-color: #15203f;
    }

    .filters-right {
        display: flex;
        gap: 10px;
    }

    .icon-button {
        background-color: #ffffff;
        border: 1px solid #ced4da;
        padding: 8px;
        border-radius: 5px;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .icon-button:hover {
        background-color: #f1f1f1;
    }

    .fa {
        font-size: 16px;
        color: #003f88;
    }

    @@media (max-width: 992px) {
        .filter-container {
            flex-direction: column;
            align-items: flex-start;
        }

        .filters-left, .filters-right {
            flex-direction: column;
            width: 100%;
        }

        .filter-button, .ok-button, .icon-button {
            width: 100%;
            text-align: center;
        }

        .date-picker {
            flex-direction: column;
        }
    }

    @@media (max-width: 576px) {
        .filter-button, .ok-button, .icon-button {
            padding: 10px 12px;
        }

        .date-picker {
            gap: 5px;
        }
    }
</style>
