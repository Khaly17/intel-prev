@page "/not-found"
@layout MainLayout

<div class="notfound-container">
    <div class="notfound-box">
        <h1>404</h1>
        <h2>Page non trouvée</h2>
        <p>Désolé, la page que vous recherchez n'existe pas ou a été déplacée.</p>
        <a class="home-btn" href="/">Retour à l'accueil</a>
    </div>
</div>

<style>
    .notfound-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        text-align: center;
        padding: 20px;
    }

    .notfound-box {
        max-width: 500px;
        padding: 40px;
    }

    .notfound-box h1 {
        font-size: 5rem;
        margin: 0;
        color: #003f88;
    }

    .notfound-box h2 {
        font-size: 1.8rem;
        margin-bottom: 15px;
        color: #1a1a2e;
    }

    .notfound-box p {
        color: #555;
        font-size: 1rem;
        margin-bottom: 30px;
    }

    .home-btn {
        background-color: #003f88;
        color: white;
        padding: 12px 25px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

    @@media (max-width: 600px) {
        .notfound-box h1 {
            font-size: 4rem;
        }

        .notfound-box h2 {
            font-size: 1.4rem;
        }

        .notfound-box p {
            font-size: 0.95rem;
        }
    }
</style>
